<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>CinemaBookingWebAppConfig</display-name>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>RequestSignInServlet</filter-name>
        <filter-class>cinema.filters.RequestSignInServlet</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestSignInServlet</filter-name>
        <url-pattern>/signIn</url-pattern>
        <servlet-name>SignInServlet</servlet-name>
    </filter-mapping>
    <filter>
        <filter-name>RequestSignUpServlet</filter-name>
        <filter-class>cinema.filters.RequestSignUpServlet</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestSignUpServlet</filter-name>
        <url-pattern>/signUp</url-pattern>
        <servlet-name>SignUpServlet</servlet-name>
    </filter-mapping>
    <listener>
        <listener-class>cinema.listeners.SpringContextLoaderListener</listener-class>
    </listener>
</web-app>